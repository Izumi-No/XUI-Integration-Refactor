{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {"~/*":["./src/*"]},
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}